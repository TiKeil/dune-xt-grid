__name = {test_grid_periodicview.periodicity}_{test_grid_periodicview.griddomain}
__exec_suffix = yasp_{dimDomain}d, alu_{__local.geometry}_{__local.refinement}_{dimDomain}d | expand grid

include grids.mini

[test_grid_periodicview]
is_simplex = false, {__local.geometry_is_simplex} | expand grid
lower_left = "[0 0 0 0]", "[-0.5 0.5 0.7 -1.3]" | expand coords
upper_right = "[1 1 1 1]", "[2.0 3.0 1.0 4.0]" | expand coords
griddomain = unit_cube, rectangle | expand coords
gridshape = cube, rectangle, rectangle2 | expand coords
num_elements = "[8 8 8 8]"
periodicity = "nonperiodic", "partially_periodic", "periodic" | expand
dimDomain = {dimDomain}


[__static]
TESTGRIDTYPE = {grid}
